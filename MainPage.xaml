<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ApkToAabConverter.ViewModels"
             x:Class="ApkToAabConverter.MainPage"
             Title="APK to AAB Converter">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <!-- Header -->
            <Label 
                Text="APK to AAB Converter for macOS"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center"
                Margin="0,10,0,20"/>

            <Label 
                Text="Convert Android APK files to AAB format and sign them with certificates"
                FontSize="14"
                HorizontalTextAlignment="Center"
                TextColor="Gray"
                Margin="0,0,0,20"/>

            <!-- APK Selection Card -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="15" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="1. Select APK File" FontSize="18" FontAttributes="Bold"/>
                    
                    <Button 
                        Text="Select APK File"
                        Clicked="OnSelectApkClicked"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        CornerRadius="5"
                        HeightRequest="45"/>
                    
                    <Label 
                        x:Name="SelectedApkLabel"
                        FontSize="12"
                        TextColor="Gray"
                        LineBreakMode="TailTruncation"
                        IsVisible="False"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Certificate Selection Card -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="15" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="2. Certificate Options" FontSize="18" FontAttributes="Bold"/>
                    
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <CheckBox x:Name="UseDefaultCertCheckbox" IsChecked="True"/>
                        <Label 
                            Text="Use Default Android Certificate (testkey)"
                            VerticalOptions="Center"
                            FontSize="14"/>
                    </StackLayout>

                    <Button 
                        Text="Select Custom Certificate"
                        Clicked="OnSelectCertificateClicked"
                        BackgroundColor="#FF9800"
                        TextColor="White"
                        CornerRadius="5"
                        HeightRequest="45"/>

                    <Label 
                        x:Name="CertificateInfoLabel"
                        Text="Default Android Certificate (testkey)"
                        FontSize="12"
                        FontAttributes="Italic"
                        TextColor="Green"
                        Margin="0,5,0,0"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Output Path Card -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="15" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="3. Output Location" FontSize="18" FontAttributes="Bold"/>
                    
                    <Entry 
                        x:Name="OutputPathEntry"
                        Placeholder="Output AAB file path..."
                        FontSize="14"
                        IsReadOnly="True"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Action Buttons -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="15" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="4. Convert" FontSize="18" FontAttributes="Bold"/>
                    
                    <Button 
                        x:Name="ConvertOnlyButton"
                        Text="Convert APK to AAB"
                        Clicked="OnConvertOnlyClicked"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="5"
                        HeightRequest="50"
                        FontSize="16"
                        FontAttributes="Bold"
                        IsEnabled="False"/>

                    <Button 
                        x:Name="ConvertAndSignButton"
                        Text="Convert and Sign AAB"
                        Clicked="OnConvertAndSignClicked"
                        BackgroundColor="#9C27B0"
                        TextColor="White"
                        CornerRadius="5"
                        HeightRequest="50"
                        FontSize="16"
                        FontAttributes="Bold"
                        IsEnabled="False"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Progress and Status -->
            <Frame x:Name="ProgressFrame" BorderColor="LightGray" CornerRadius="10" Padding="15" HasShadow="True" IsVisible="False">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Processing..." FontSize="16" FontAttributes="Bold"/>
                    <ProgressBar x:Name="ProgressBar" ProgressColor="#2196F3"/>
                    <ActivityIndicator x:Name="ActivityIndicator" Color="#2196F3"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Status Message -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="15" HasShadow="True">
                <HorizontalStackLayout Spacing="10">
                    <Label Text="Status:" FontAttributes="Bold" VerticalOptions="Center"/>
                    <Label 
                        x:Name="StatusLabel"
                        Text="Ready"
                        TextColor="#2196F3"
                        VerticalOptions="Center"
                        FontAttributes="Italic"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- Logs Section -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="15" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Console Output" FontSize="16" FontAttributes="Bold" HorizontalOptions="Start"/>
                        <Button 
                            Text="Clear"
                            Clicked="OnClearLogsClicked"
                            BackgroundColor="#F44336"
                            TextColor="White"
                            CornerRadius="5"
                            Padding="10,5"
                            HorizontalOptions="End"/>
                    </HorizontalStackLayout>
                    
                    <ScrollView HeightRequest="200">
                        <Label 
                            x:Name="LogOutputLabel"
                            FontFamily="Courier"
                            FontSize="11"
                            TextColor="Black"
                            BackgroundColor="#F5F5F5"
                            Padding="10"/>
                    </ScrollView>
                </VerticalStackLayout>
            </Frame>

            <!-- Footer -->
            <Label 
                Text="© 2024 APK to AAB Converter - Made with ❤️ for macOS"
                FontSize="12"
                TextColor="Gray"
                HorizontalTextAlignment="Center"
                Margin="0,20,0,10"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
